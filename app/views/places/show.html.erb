<h1><%= @place["name"] %></h1>

<div class="my-3">
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
</div>

<div class="mb-3">
  <h2>My Entries</h2>
</div>

<% user_entries = @entries.where({"user_id" => session["user_id"]}) %>
<div class="row">
  <% for entry in user_entries %>
    <div class="col-sm-6 col-md-4">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
      <p><%= entry["description"] %></p>
    </div>
  <% end %>
</div>




<p>
  <a href="/places">Back to All Places</a>
</p>