<h1>New Entry</h1>

<% if @user != nil %>
<form action="/entries" method="post" enctype="multipart/form-data">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <div class="mb-3">
    <label for="title_input">Title</label>
    <input type="text" name="title" id="title_input" class="form-control" required>
  </div>

  <div class="mb-3">
    <label for="description_input">Description</label>
    <textarea type="text" name="description" id="description_input" class="form-control" rows="2" required></textarea>
  </div>

  <div class="mb-3">
    <label for="occurred_on_input" class="form-label">Occurred On</label>
    <input type="date" name="occurred_on" id="occurred_on_input" class="form-control" required>
  </div>

    <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image</label optional>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
    </div>

  <button class="btn btn-primary">Save</button>
</form>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>